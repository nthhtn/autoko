<html lang="en">

<head>
	<title>Autoko</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<%-include('base/plugins')%>
	<link rel="stylesheet" href="/css/index.css">
</head>

<body>
	<%-include('base/navbar')%>
	<div class="wrapper container">
		<div class="row">
			<%-include('base/searchform')%>
			<div class="ml-auto mr-auto text-center card" id="product-list">
				<div class="card-header card-header-primary">
					<h4 class="card-title">Newest in stock</h4>
				</div>
				<div class="card-body row">
					<%cars.forEach(function(car){%>
					<div class="col-md-4 col-sm-6 col-xs-12 product-item">
						<div class="product-image">
							<img src="/uploads/<%=car.avatar%>" alt="">
						</div>
						<div class="product-info">
							<div class="product-name"><a href="/car/<%=car._id%>?country=<%=country%>">
									<%=car.name%></a></div>
							<div class="row" style="margin: 0">
								<div class="product-price col-md-6">
									<%=car.price%> euro</div>
								<div class="product-view col-md-6"><a href="#" class="btn btn-primary" role="button" aria-disabled="true"><i
										 class="material-icons">add_shopping_cart</i> Buy</a></div>
							</div>
						</div>
					</div>
					<%})%>
				</div>
				<div class="card-footer">
					<nav>
						<ul class="pagination">
							<%if (page==1){%>
							<li class="page-item disabled">
								<a class="page-link" href="#">Previous</a>
							</li>
							<%}else{%>
							<li class="page-item">
								<a class="page-link" href="/<%=page-1%>">Previous</a>
							</li>
							<%}%>
							<%if (has_more){%>
							<li class="page-item">
								<a class="page-link" href="/<%=page+1%>">Next</a>
							</li>
							<%}else{%>
							<li class="page-item disabled">
								<a class="page-link" href="#">Next</a>
							</li>
							<%}%>
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</div>
	<script src="/js/searchform.js"></script>
</body>

</html>